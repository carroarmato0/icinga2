#include "base/dynamicobject.h"

namespace icinga
{

class User : DynamicObject
{
	[config] String display_name {
		get {{{
			if (m_DisplayName.IsEmpty())
				return GetName();
			else
				return m_DisplayName;
		}}}
	};
	[config] Dictionary::Ptr macros;
	[config] Array::Ptr groups;
	[config] String notification_period (NotificationPeriodRaw);
	[config] Array::Ptr notification_types (NotificationTypesRaw) {
		default {{{ return ~(int)0; }}}
	};
	[config] Array::Ptr notification_states (NotificationStatesRaw) {
		default {{{ return ~(int)0; }}}
	};
	[state] bool enable_notifications;
	[state] double last_notification;
};

}
